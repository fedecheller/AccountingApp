@model BillsViewModel

@{
    ViewData["Title"] = "Invoices";
}

<h3><img src="~/images/invoice_s.png" /> <a asp-controller="Home" asp-action="Index">Home</a> / Invoices</h3>
<h4 class="printable">Invoices</h4>
<p class="tool-links">
    <a asp-action="Create">Create New</a> | <a href="#" class="print-btn">Print Invoices</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Number</th>
            <th>Amount</th>
            <th>Customer</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.bills) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                #@Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Model.customers.First(c => c.ID == item.CustomerID).Name
            </td>
            <td class="tool-links">
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
